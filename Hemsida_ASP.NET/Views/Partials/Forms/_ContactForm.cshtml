@model ContactViewModel    
 
<section class="contact-form">
        <div class="container">
            <div class="title">Write something</div>
            
            <form novalidate method="post">
                <div class="name form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                    <span class="error" asp-validation-for="Name"></span>
                </div>

                <div class="email form-group">
				    <label asp-for="Email"></label>
                    <input asp-for="Email">
                    <span class="error" asp-validation-for="Email"></span>
                </div>

                <div class="phoneNumber form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber">
                    <span class="error" asp-validation-for="PhoneNumber"></span>
                </div>

                <div class="companyName form-group">
                    <label asp-for="Company"></label>
                    <input asp-for="Company">
                    <span class="error" asp-validation-for="Company"></span>
                </div>

                <div class="message form-group">
                    <label asp-for="Message"></label>
                    <textarea asp-for="Message" class="invalid"></textarea>
                    <span class="error" asp-validation-for="Message"></span>
                </div>

                <button class="btn-theme" type="submit">Submit</button>
            </form>
        </div>
    </section>