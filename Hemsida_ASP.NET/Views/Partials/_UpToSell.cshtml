@model IEnumerable<Product>  
 
<section class="up-to-sell">
        <div class="container">
            <div class="collection-grid">
                <div class="item-1">
                    @if(Model.Count() >= 2){
                         var product1 = Model.ElementAt(0);

                        <a asp-action="Details" asp-controller="Products" asp-route-articleId="@product1.ArticleId" class="collection-item">
                            @{
                                if (!string.IsNullOrEmpty(product1.ProductImage))
                                {
                                    <img src="@($"/images/productImages/{@product1.ProductImage}")" alt="Product Image" width="270" height="295"/>
                                }
                                else
                                {
                                    <img src="images/placeholders/270x295.svg" alt="Product Image" width="270" height="295">
                                }
                            }
                            <div class="body">
                                <div class="title">@product1.ProductName</div>
                                <div class="info">
                                    <div class="price">@string.Format("{0:C0}", product1.Price)</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>
                    }

                </div>
                <div class="discover">
                    <!-- collection-content start -->
                    <div class="collection-content">
                        <div class="container">
                            <div class="title-red">UP TO SELL</div>
                            <div class="title">50% OFF</div>
                            <div class="ingress">Get the Best Price</div>
                            <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                            <a href="#" class="link">Discover More</a>
                        </div>
                    </div>
                    <!-- collection-content end -->
                </div>

                <div class="item-2">
                    @if(Model.Count() >= 2){
                        var product2 = Model.ElementAt(1);
                        <a asp-action="Details" asp-controller="Products" asp-route-articleId="@product2.ArticleId" class="collection-item">
                            @{
                                if (!string.IsNullOrEmpty(product2.ProductImage))
                                {
                                    <img src="@($"/images/productImages/{@product2.ProductImage}")" alt="Product Image" width="270" height="295"/>
                                }
                                else
                                {
                                    <img src="images/placeholders/270x295.svg" alt="Product Image" width="270" height="295">
                                }
                            }
                            <div class="body">
                                <div class="title">@product2.ProductName</div>
                                <div class="info">
                                    <div class="price">@string.Format("{0:C0}", product2.Price)</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </section>