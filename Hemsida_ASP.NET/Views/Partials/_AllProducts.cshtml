@model IEnumerable<ProductEntity>

<section class="best-collection">
    <div class="container mt-5">
        <h1 class="collection-title">All Available Products</h1>
        <ul class="categories">
            <li class="category-item">Bag</li>
            <li class="category-item">Dress</li>
            <li class="category-item">Decoration</li>
            <li class="category-item">Essentials</li>
            <li class="category-item">Interior</li>
            <li class="category-item">Laptop</li>
            <li class="category-item">Mobile</li>
            <li class="category-item">Beauty</li>
        </ul>

        <div class="collection-grid">

            
            @foreach(var product in Model)
            {
                <a asp-action="Details" asp-controller="Products" asp-route-articleId="@product.ArticleId" class="collection-item">
                    @{
                        if (!string.IsNullOrEmpty(product.ProductImage))
                        {
                            <img src="@($"/images/productImages/{product.ProductImage}")" alt="Product Image" width="270" height="295"/>
                        }
                        else
                        {
                            <img src="images/placeholders/270x295.svg" alt="Product Image" width="270" height="295">
                        }
                    }
                    <div class="body">
                        <div class="title">@product.ProductName</div>
                        <div class="info">
                            <div class="price">@string.Format("{0:C0}", product.Price)</div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>
            }

        </div>
        <div class="load-more">
            <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
        </div>
    </div>
</section>