@model Product

@{
	ViewData["Title"] = "Product Details";
}

<section class="best-collection">
    <div class="container my-5 d-flex justify-content-center mx-auto">

        <div class="collection-grid">
                    @{
                        if (!string.IsNullOrEmpty(Model.ProductImage))
                        {
                            <img src="@($"/images/productImages/{Model.ProductImage}")" alt="Product Image" width="501" height="430"/>
                        }
                        else
                        {
                            <img src="images/placeholders/501x430.svg" alt="Product Image" width="501" height="430">
                        }
                    }
                    <div class="body row">
                        <h2>@Model.ProductName</h2>
                        <div class="info mx-2 d-flex flex-column">
                            <h5 class="fw-light">@string.Format("{0:C0}", Model.Price)</h5>
                            <h5 class="mb-4 mt-2 fw-light">@Model.Ingress</h5>
                            <p>@Model.Description</p>
                            <h6 class="align-self-end mt-3">@Model.VendorName</h6>
                            <i class="add-cart fa-regular fa-cart-plus align-self-end"></i>
                        </div>
                    </div>

        </div>
    </div>
</section>