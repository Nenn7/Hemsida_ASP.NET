@model RegisterUserViewModel;

@{
	ViewData["Title"] = "Register New User";
}

<section class="contact-form">
	<div class="container">
		<div class="title">Register as a new User:</div>
		<form method="post">

			<div asp-validation-summary="ModelOnly"></div>
		
			<div class="form-group">
				<label asp-for="FirstName"></label>
				<input asp-for="FirstName"/>
				<span asp-validation-for="FirstName"></span>
			</div>

			<div class="form-group">
				<label asp-for="LastName"></label>
				<input asp-for="LastName"/>
				<span asp-validation-for="LastName"></span>
			</div>

			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" data-val="true" data-val-required="msg" type="text"/>
				<span asp-validation-for="Email" data-valmsg-for="Email"></span>
			</div>

			<div class="form-group">
				<label asp-for="PhoneNumber"></label>
				<input asp-for="PhoneNumber"/>
				<span asp-validation-for="PhoneNumber"></span>
			</div>

			<div class="form-group">
				<label asp-for="StreetName"></label>
				<input asp-for="StreetName"/>
				<span asp-validation-for="StreetName"></span>
			</div>

			<div class="form-group">
				<label asp-for="PostalCode"></label>
				<input asp-for="PostalCode"/>
				<span asp-validation-for="PostalCode"></span>
			</div>

			<div class="form-group">
				<label asp-for="City"></label>
				<input asp-for="City"/>
				<span asp-validation-for="City"></span>
			</div>

			<div class="form-group">
				<label asp-for="Company"></label>
				<input asp-for="Company"/>
				<span asp-validation-for="Company"></span>
			</div>

			<div class="form-group">
				<label asp-for="Password"></label>
				<input asp-for="Password" data-val="true" type="password" data-val-required="msg"/>
				<span asp-validation-for="Password" data-valmsg-for="Password"></span>
			</div>

			<div class="form-group">
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" data-val="true" type="password" data-val-required="msg"/>
				<span asp-validation-for="ConfirmPassword" data-valmsg-for="ConfirmPassword"></span>
			</div>

			<div class="form-group">
				<label asp-for="ProfileImage"></label>
				<input asp-for="ProfileImage"/>
				<span asp-validation-for="ProfileImage"></span>
			</div>

			<div>
			<button class="btn-theme" type="submit">Register</button>
			</div>
		</form>
	</div>
</section>